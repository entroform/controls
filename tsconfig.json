{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "outDir": "build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2015",
  },
  "include": [
    "controls/*", "controls/input-active-manager/input-active-manager.ts", "controls/sortable/sortable-list", "controls/slider/duo-knob-slider", "controls/slider/mono-knob-slider",
  ],
  "exclude": [
    "node_modules",
    "src/**"
  ]
}